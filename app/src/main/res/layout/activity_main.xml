<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="Home"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/CameraSelect"
        android:layout_width="66dp"
        android:layout_height="61dp"
        android:layout_alignBottom="@+id/ImageSelect"
        android:layout_centerHorizontal="true"
        fab:srcCompat="@drawable/ic_photo_camera_black_24dp" />

    <ImageButton
        android:id="@+id/ImageSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp"
        android:layout_marginStart="29dp"
        fab:srcCompat="@drawable/ic_image_black_24dp" />

    <ImageButton
        android:id="@+id/BrowseSubmissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CameraSelect"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        fab:srcCompat="@drawable/ic_open_in_browser_black_24dp" />

</RelativeLayout>
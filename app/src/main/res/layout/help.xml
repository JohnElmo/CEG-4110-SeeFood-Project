<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Help">

    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#da3c21"
        fab:menu_colorPressed="#dc4b3f"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66aff198"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_ImageSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image_black_24dp"
            fab:fab_label="Select Image"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_CameraSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_camera_black_24dp"
            fab:fab_label="Take Picture"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_BrowseSubmissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_open_in_browser_black_24dp"
            fab:fab_label="Browse Submissions"
            fab:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>

    <TextView
        android:id="@+id/help_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Help"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/CameraSelectIcon"
        android:layout_width="53dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="191dp"
        android:layout_marginStart="51dp"
        fab:srcCompat="@drawable/ic_photo_camera_black_24dp" />

    <ImageView
        android:id="@+id/ImageSelectIcon"
        android:layout_width="53dp"
        android:layout_height="47dp"
        android:layout_alignStart="@+id/CameraSelectIcon"
        android:layout_below="@+id/CameraSelectIcon"
        android:layout_marginTop="-192dp"
        fab:srcCompat="@drawable/ic_image_black_24dp" />

    <ImageView
        android:id="@+id/BrowseSubmissionsIcon"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:layout_alignStart="@+id/CameraSelectIcon"
        android:layout_below="@+id/ImageSelectIcon"
        fab:srcCompat="@drawable/ic_open_in_browser_black_24dp" />

    <TextView
        android:id="@+id/CameraSelectInfo"
        android:layout_width="165dp"
        android:layout_height="47dp"
        android:layout_alignBottom="@+id/CameraSelectIcon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="115dp"
        android:ems="10"
        android:text="Camera Select: You can use your device's camera in order to upload an image for analysis."
        android:textSize="36px" />

    <TextView
        android:id="@+id/ImageSelectInfo"
        android:layout_width="165dp"
        android:layout_height="47dp"
        android:layout_alignBottom="@+id/ImageSelectIcon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="115dp"
        android:ems="10"
        android:text="Image Select: You can select an image already on your device for analysis."
        android:textSize="36px" />

    <TextView
        android:id="@+id/BrowseSubmissionsInfo"
        android:layout_width="165dp"
        android:layout_height="52dp"
        android:layout_below="@+id/ImageSelectIcon"
        android:layout_toEndOf="@+id/CameraSelectIcon"
        android:ems="10"
        android:text="Browse Submissions: Go back and look at any past submission that has already been analysised."
        android:textSize="36px" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="41dp"
        fab:srcCompat="@drawable/cooking_robot_help" />

</RelativeLayout>
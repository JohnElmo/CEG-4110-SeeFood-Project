<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageSelectActivity"
    android:background="@drawable/kitchen">


    <ImageView
        android:id="@+id/imageRobot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="27dp"
        fab:srcCompat="@drawable/cooking_robot_just_pan" />

    <ImageView
        android:id="@+id/GalleryPreview"
        android:layout_width="146dp"
        android:layout_height="145dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="177dp" />

    <Button
        android:id="@+id/HelpIcon"
        android:layout_width="37dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/help_icon" />

    <Button
        android:id="@+id/Gallerybtn"
        android:layout_width="136dp"
        android:layout_height="106dp"
        android:layout_alignStart="@+id/GalleryPreview"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="166dp"
        android:background="@drawable/chicken_raw" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/submit" />

    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:padding="8dp"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#da3c21"
        fab:menu_colorPressed="#dc4b3f"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66aff198"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_Image_HomeSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above = "@id/GalleryPreview"
            android:src="@drawable/ic_home_black_24dp"
            fab:fab_label="Home"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_Image_CameraSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above = "@id/GalleryPreview"
            android:src="@drawable/ic_photo_camera_black_24dp"
            fab:fab_label="Take Picture"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_Image_BrowseSubmissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above = "@id/GalleryPreview"
            android:src="@drawable/ic_open_in_browser_black_24dp"
            fab:fab_label="Browse Submissions"
            fab:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>

    <TextView
        android:id="@+id/selected_image_submitResponse"
        android:layout_width="310dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="112dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/selected_image_submitResponse"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="-112dp"
        android:numStars="6"
        android:stepSize="1" />

    <ImageView
        android:id="@+id/ratingExplanations"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ratingBar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        fab:srcCompat="@drawable/rating_explanation" />


</RelativeLayout>